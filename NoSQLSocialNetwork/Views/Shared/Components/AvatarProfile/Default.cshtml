@model dynamic
<div class="nav-right">
	<div class="search-box">
		<img src="images/search.png">
		<input type="text" placeholder="Search">
	</div>
	<div class="nav-user-icon online" onclick="settingsMenuToggle();">
		@if (Model != null)
		{
			<img src="@Model.Avatar">
		}else
		{
			<img src="img/avatardefault.png">
		}

	</div>
</div>
<div class="settings-menu">
    <div id="dark-btn">
        <span></span>
    </div>
    <div class="settings-menu-inner">
        <div class="user-profile">
            @if (Model != null)
            {
                <img src="@Model.Avatar">
            }
            else
            {
                <img src="img/avatardefault.png">
            }
            <div>
                @if (Model != null)
                {
                    <p>@Model.Name</p>
                }
                else
                {
                    <p></p>
                }       
                <a asp-action="Index" asp-controller="Profile">See Your Profile</a>
            </div>
        </div>
        <hr>

        <div class="settings-links">
            <img src="images/setting.png" class="settings-icon">
            <a href="#">Settings & Privacy</a>
            <img src="images/arrow.png" width="10px">
        </div>
        <div class="settings-links">
            <img src="images/help.png" class="settings-icon">
            <a href="#">Help & Support</a>
            <img src="images/arrow.png" width="10px">
        </div>
        <div class="settings-links">
            <img src="images/display.png" class="settings-icon">
            <a href="#">Display & Accessibility</a>
            <img src="images/arrow.png" width="10px">
        </div>
        <div class="settings-links">
            <img src="images/logout.png" class="settings-icon">
            <a asp-action="Logout" asp-controller="Access">Logout</a>
            <img src="images/arrow.png" width="10px">
        </div>
    </div>
</div>