@model dynamic
<div class="nav-right">
    <form class="search-box" asp-controller="Search" asp-action="Index" method="get">
        <input type="text" name="textsearch" placeholder="Tìm kiếm">
        <button type="submit">
            <img src="images/search.png">
        </button>
    </form>
    <div class="nav-user-icon online" onclick="settingsMenuToggle();">
        @if (Model != null)
        {
            <img src="@Model.Avatar">
        }
        else
        {
            <img src="img/avatardefault.png">
        }

    </div>
</div>
<div class="settings-menu">
    <div id="dark-btn">
        <span></span>
    </div>
    <div class="settings-menu-inner">
        <div class="user-profile">
            @if (Model != null)
            {
                <img src="@Model.Avatar">
            }
            else
            {
                <img src="img/avatardefault.png">
            }
            <div>
                @if (Model != null)
                {
                    <p>@Model.Name</p>
                }
                else
                {
                    <p></p>
                }
                <a asp-action="Index" asp-controller="Profile">Trang cá nhân</a>
            </div>
        </div>
        <hr>

        <div class="settings-links">
            <img src="images/setting.png" class="settings-icon">
            <a href="#">Cài đặt & Bảo mật</a>
            <img src="images/arrow.png" width="10">
        </div>
        <div class="settings-links">
            <img src="images/help.png" class="settings-icon">
            <a href="#">Hỗ trợ</a>
            <img src="images/arrow.png" width="10">
        </div>
        <div class="settings-links">
            <img src="images/logout.png" class="settings-icon">
            <a asp-action="Logout" asp-controller="Access">Đăng xuất</a>
            <img src="images/arrow.png" width="10">
        </div>
    </div>
</div>